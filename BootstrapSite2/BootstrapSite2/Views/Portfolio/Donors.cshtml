
@{
    ViewBag.Title = "Donors";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header" style="color:#FFE033">
                Donors List
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active" style="color:#FFFFFF">Post Requests</li>
            </ol>
        </div>
        <style>

            body {
                background-size: 1400px;
                background-image: url(../Images/bg2.png);
            }
        </style>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
    </script>
    <style>
        table {
            width: 100%
        }

        td {
            width: 25%;
            text-align: center
        }

        tr {
            height: 50px;
            border-bottom: 1pt solid black
        }
    </style>
    </head>
    <body>
        <center>
            <input id="myInput" type="text" placeholder="Search..">
            <br><br>
            <table class="w3-table w3-striped" style="width:100%">
                <tr style="height:35px">
                    <th style="width:25%;text-align:center">
                        Name
                    </th>
                    <th style="width:25%;text-align:center">
                        Contact Number
                    </th>
                    <th style="width:25%;text-align:center">
                        Donate
                    </th>
                    <th style="width:25%;text-align:center">
                        Details
                    </th>
                </tr>
            </table>
            <table>
                <tbody id="myTable">
                    <tr>
                        <td>John</td>
                        <td>Doe</td>
                        <td>john@example.com</td>
                        <td> <a href="@Url.Action("Details","Portfolio")" class="btn btn-primary">Details<i class="fa fa-angle-right"></i></a></td>
                    </tr>
                    <tr>
                        <td>Mary</td>
                        <td>Moe</td>
                        <td>mary@mail.com</td>
                        <td> <a href="@Url.Action("Details","Portfolio")" class="btn btn-primary">Details<i class="fa fa-angle-right"></i></a></td>
                    </tr>
                    <tr>
                        <td>July</td>
                        <td>Dooley</td>
                        <td>july@greatstuff.com</td>
                        <td> <a href="@Url.Action("Details","Portfolio")" class="btn btn-primary">Details<i class="fa fa-angle-right"></i></a></td>
                    </tr>
                    <tr>
                        <td>Anja</td>
                        <td>Ravendale</td>
                        <td>a_r@test.com</td>
                        <td> <a href="@Url.Action("Details","Portfolio")" class="btn btn-primary">Details<i class="fa fa-angle-right"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </center>

        <p>Note that we start the search in tbody, to prevent filtering the table headers.</p>

    </body>
</div>